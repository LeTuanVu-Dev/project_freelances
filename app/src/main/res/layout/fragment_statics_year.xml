<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <com.tuanvu.quanlichitieu.future.ultis.BarChartView
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/lnIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pie_chart"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >
        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:background="@color/color_incorrect"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng Chi"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_16ssp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lnIncome"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >
        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:background="@color/color_green"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng Thu"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_16ssp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>